                    Padding="0, 20, 0, 20"
                    BackgroundColor="#FAFAFA"
                    Command="{Binding GoToAnnouncements}"
                    CommandParameter="Important_IAB305"/>
            -->
    </ContentPage.Content>
</ContentPage>