<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudySpot.Views.FeedPage"
             xmlns:local="clr-namespace:StudySpot.ViewModels"
             Title="My Feed">

    <ContentPage.BindingContext>
        <local:FeedViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="My Feed" />
            <Label Text="Announcements" />
            <Label Text="Important" />
            <Button x:Name="ImportantCAB303" Text="{Binding AnnouncementText}"
                    TextColor="Black"
                    WidthRequest="250"
                    HorizontalOptions="Center"
                    CornerRadius="5"
                    Margin="0, 10, 0, 10"
                    Padding="0, 20, 0, 20"
                    BackgroundColor="#FAFAFA"
                    Command="{Binding GoToAnnouncements}"
                    CommandParameter="Important_CAB303"/>
            <Button x:Name="ImportantIAB305" Text="{Binding AnnouncementText}"
                    TextColor="Black"
                    WidthRequest="250"
                    HorizontalOptions="Center"
                    CornerRadius="5"
                    Margin="0, 10, 0, 10"
                    Padding="0, 20, 0, 20"
                    BackgroundColor="#FAFAFA"
                    Command="{Binding GoToAnnouncements}"
                    CommandParameter="Important_IAB305"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>