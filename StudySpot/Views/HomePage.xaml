<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:StudySpot.ViewModels"
    xmlns:controls="clr-namespace:StudySpot.Controls"
    x:Class="StudySpot.Views.HomePage"
    Title="Home">

    <ContentPage.BindingContext>
        <viewmodel:HomePageViewModel/>
    </ContentPage.BindingContext>

    <Shell.TitleView>
        <controls:TopNavBar/>
    </Shell.TitleView>

    <ContentPage.Content>

        <ScrollView HeightRequest="3000">
            <StackLayout Padding="20, 20, 20, 20">

                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding Email, StringFormat='Hello, {0:F0}!'}"
                           FontSize="Title"
                           FontAttributes="Bold"></Label>
                    <Image Source="profile.png" HorizontalOptions="EndAndExpand" HeightRequest="35" Margin="0, 0, 10, 0"></Image>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Todays Classes (3)" TextColor="Black" FontSize="Subtitle" FontAttributes="Bold" VerticalOptions="Center"></Label>
                    <Button Text="See all" FontAttributes="Bold" FontSize="Small" TextColor="#969FAA" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" Command="{Binding GoToClasses}"></Button>
                </StackLayout>

                <!-- Todays Classes -->

                <!-- First card (Classes) -->
                <Grid BackgroundColor="#FAFAFA"
                      Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <!-- Rounded, coloured box on the left -->
                    <BoxView Color="#00A6FF"
                             CornerRadius="5, 0, 5, 0"
                             WidthRequest="20"
                             HeightRequest="50"
                             Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" />
                    <!-- Rounded 'unit code' text box -->
                    <Frame BackgroundColor="#00A6FF"
                           CornerRadius="15" HasShadow="False"
                           Margin="8, 6, 5, 0" Padding="0, 2, 0, 2"
                           Grid.Row="0" Grid.Column="4">
                        <Label Text="CAB303"
                               FontAttributes="Bold"
                               TextColor="White" BackgroundColor="Transparent"
                               HorizontalTextAlignment="Center" />
                    </Frame>
                    <!-- Content -->
                    <Label Text="9:00"
                           Margin="10, 10, 0, 0" TextColor="#47525E" FontAttributes="Bold" FontSize="Subtitle"
                           Grid.Row="0" Grid.Column="1"/>

                    <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="2" RowSpacing="0">
                        <StackLayout Orientation="Horizontal" Grid.Row="0" Grid.Column="0" VerticalOptions="Center">
                            <Image Source="laptop.png"></Image>
                            <Label>Online Tutorial</Label>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Grid.Row="1" Grid.Column="0" VerticalOptions="Center">
                            <Image Source="zoom.png"></Image>
                            <Label>Zoom ID: 11212991</Label>
                        </StackLayout>
                    </Grid>

                    <!-- Button -->
                    <Button BackgroundColor="Transparent"
                            Grid.Row="0"  Grid.Column="2"
                            Grid.RowSpan="2"  Grid.ColumnSpan="2"/>

                    <Label Text="AM"
                           Margin="15, 0, 0, 0" TextColor="#969FAA"
                           Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" />

                    <!-- Button -->
                    <Button Command="{Binding GoToClasses}"
                            BackgroundColor="Transparent"
                            Grid.Row="0"  Grid.Column="0"
                            Grid.RowSpan="2"  Grid.ColumnSpan="4" />
                </Grid>

                <!-- Second card (Classes) -->

                <Grid BackgroundColor="#FAFAFA"
                      Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <!-- Rounded, coloured box on the left -->
                    <BoxView Color="#F95F62"
                             CornerRadius="5, 0, 5, 0"
                             WidthRequest="20"
                             HeightRequest="50"
                             Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" />
                    <!-- Rounded 'unit code' text box -->
                    <Frame BackgroundColor="#F95F62"
                           CornerRadius="15" HasShadow="False"
                           Margin="8, 6, 5, 0" Padding="0, 2, 0, 2"
                           Grid.Row="0" Grid.Column="4">
                        <Label Text="IAB330"
                               FontAttributes="Bold"
                               TextColor="White" BackgroundColor="Transparent"
                               HorizontalTextAlignment="Center" />
                    </Frame>
                    <!-- Content -->
                    <Label Text="11:00"
                           Margin="10, 10, 0, 0" TextColor="#47525E" FontAttributes="Bold" FontSize="Subtitle"
                           Grid.Row="0" Grid.Column="1"/>

                    <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="2" RowSpacing="0">
                        <StackLayout Orientation="Horizontal" Grid.Row="0" Grid.Column="0" VerticalOptions="Center">
                            <Image Source="laptop.png"></Image>
                            <Label>Online Tutorial</Label>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Grid.Row="1" Grid.Column="0" VerticalOptions="Center">
                            <Image Source="msteams.png"></Image>
                            <Label Text="Microsoft Teams"></Label>
                        </StackLayout>
                    </Grid>

                    <!-- Button -->
                    <Button BackgroundColor="Transparent"
                            Grid.Row="0"  Grid.Column="2"
                            Grid.RowSpan="2"  Grid.ColumnSpan="2"/>

                    <Label Text="AM"
                           Margin="15, 0, 0, 0" TextColor="#969FAA"
                           Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" />

                    <!-- Button -->
                    <Button Command="{Binding GoToClasses}"
                            BackgroundColor="Transparent"
                            Grid.Row="0"  Grid.Column="0"
                            Grid.RowSpan="2"  Grid.ColumnSpan="4" />
                </Grid>

                <!-- Messages -->

                <StackLayout Orientation="Horizontal">
                    <Label Text="Messages (3)" TextColor="Black" FontSize="Subtitle" FontAttributes="Bold" VerticalOptions="Center"></Label>
                    <Button Text="See all" FontAttributes="Bold" FontSize="Small" TextColor="#969FAA" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" Command="{Binding GoToMessages}"></Button>
                </StackLayout>

                <!-- First Card (Messages) -->

                <Grid BackgroundColor="#FAFAFA"
                  Margin="0, 5, 0, 0"
                      Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <!-- Rounded, coloured box on the left -->
                    <BoxView Color="#13CE66"
                             CornerRadius="5, 0, 5, 0"
                             WidthRequest="20"
                             HeightRequest="50"
                             Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" />
                    <!-- Rounded 'unit code' text box -->
                    <Frame BackgroundColor="#13CE66"
                           CornerRadius="15" HasShadow="False"
                           Margin="8, 6, 5, 0" Padding="0, 2, 0, 2"
                           Grid.Row="0" Grid.Column="4">
                        <Label Text="IAB303"
                               FontAttributes="Bold"
                               TextColor="White" BackgroundColor="Transparent"
                               HorizontalTextAlignment="Center" />
                    </Frame>
                    <!-- Content -->

                    <Label Text="LECTURER JAMES"
                           Margin="10, 10, 0, 0" TextColor="#47525E" FontSize="Small"
                           Grid.Row="0" Grid.Column="2"
                           Grid.RowSpan="1" Grid.ColumnSpan="2"/>

                    <!-- Button -->
                    <Button BackgroundColor="Transparent"
                            Grid.Row="0"  Grid.Column="2"
                            Grid.RowSpan="2"  Grid.ColumnSpan="2"/>

                    <Label Text="Lorem ispum dolor sit amet..."
                           Margin="10, 0" TextColor="#47525E" FontSize="Small"
                           Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3"/>
                </Grid>

                <!-- Second Card (Messages) -->

                <Grid BackgroundColor="#FAFAFA"
                  Margin="0, 5, 0, 0"
                      Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <!-- Rounded, coloured box on the left -->
                    <BoxView Color="#FFD185"
                             CornerRadius="5, 0, 5, 0"
                             WidthRequest="20"
                             HeightRequest="50"
                             Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" />
                    <!-- Rounded 'unit code' text box -->
                    <Frame BackgroundColor="#FFD185"
                           CornerRadius="15" HasShadow="False"
                           Margin="8, 6, 5, 0" Padding="0, 2, 0, 2"
                           Grid.Row="0" Grid.Column="4">
                        <Label Text="IAB303"
                               FontAttributes="Bold"
                               TextColor="White" BackgroundColor="Transparent"
                               HorizontalTextAlignment="Center" />
                    </Frame>
                    <!-- Content -->

                    <Label Text="TUTOR JAKE ROSS"
                           Margin="10, 10, 0, 0" TextColor="#47525E" FontSize="Small"
                           Grid.Row="0" Grid.Column="2"
                           Grid.RowSpan="1" Grid.ColumnSpan="2"/>

                    <!-- Button -->
                    <Button BackgroundColor="Transparent"
                            Grid.Row="0"  Grid.Column="2"
                            Grid.RowSpan="2"  Grid.ColumnSpan="2"/>

                    <Label Text="Lorem ispum dolor sit amet..."
                           Margin="10, 0" TextColor="#47525E" FontSize="Small"
                           Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3"/>
                </Grid>

                <!-- My Units -->

                <Grid ColumnSpacing="5" Margin="0, 10, 0, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"  Orientation="Horizontal">
                        <Label Text="My Units" TextColor="Black" FontSize="Subtitle" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Grid>

                
                <ScrollView Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal">
                        <Button CornerRadius="10"
                            WidthRequest="100"
                            HeightRequest="100"
                            BackgroundColor="#00A6FF">
                        </Button>
                        <Button CornerRadius="10"
                            WidthRequest="100"
                            HeightRequest="100"
                            BackgroundColor="#F95F62">
                        </Button>
                        <Button CornerRadius="10"
                            WidthRequest="100"
                            HeightRequest="100"
                            BackgroundColor="#13CE66">
                        </Button>
                        <Button CornerRadius="10"
                            WidthRequest="100"
                            HeightRequest="100"
                            BackgroundColor="#FFD185">
                        </Button>
                    </StackLayout>
                </ScrollView>
               
                
                


            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>
