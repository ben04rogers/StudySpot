<?xml version="1.0" encoding="UTF-8"?>
<ContentView  xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="StudySpot.Controls.TopNavBar">
    <Grid>
        <StackLayout Spacing="0" Grid.Column="0" VerticalOptions="Center">
            <Label Text="{Binding Title}"
               TextColor="Black" FontSize="Medium" FontAttributes="Bold" />
            <Label Text="{Binding TopNavSubtitle}"
               TextColor="Black" FontSize="Micro" /> 
        </StackLayout>
        <ImageButton VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand"
                     Grid.Column="1" />
    </Grid>
    
</ContentView>